{
  "extends": "airbnb-base",
  "env": {
    "browser": true,
    "node": true,
    "jest": true,
    "es2020": true
  },
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "rules": {
    "no-console": "off",
    "import/prefer-default-export": "off",
    "no-plusplus": "off",
    "no-param-reassign": "off",
    "no-use-before-define": "off",
    "linebreak-style": "off",
    "comma-dangle": "off",
    "eol-last": "off",
    "import/extensions": "off", // отключаем требование расширений
    "no-unused-expressions": "off", // отключаем проверку неиспользуемых выражений
    "default-case": "off", // отключаем требование default case
    "import/no-extraneous-dependencies": [
      "error",
      {
        "devDependencies": [ "**/*.test.js", "**/*.spec.js", "webpack.config.js" ]
      }
    ]
  },
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [ ".js", ".jsx" ]
      }
    }
  }
}
